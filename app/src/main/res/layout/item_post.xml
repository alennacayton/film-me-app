<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MovieRecomActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/gray_card"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tv_genre_mr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:paddingBottom="10dp"

                    android:text="Romance"
                    android:textAlignment="center"
                    android:textColor="@color/dirty_white"
                    android:textSize="34sp"
                    android:textStyle="bold" />


                <ImageView
                    android:id="@+id/iv_img_mr"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:paddingBottom="20dp"

                    app:srcCompat="@drawable/sample" />

                <TextView
                    android:id="@+id/tv_title_mr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/amethysta"
                    android:text="Kimi No Nawa"
                    android:textColor="@color/dirty_white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_name_mr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/amethysta"
                    android:text="by Cheska Roque"

                    android:textColor="@color/dirty_white" />

                <TextView
                    android:id="@+id/tv_rating_mr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/amethysta"
                    android:paddingBottom="10dp"

                    android:text="Rating : 5"
                    android:textColor="@color/dirty_white" />

                <TextView
                    android:id="@+id/tv_desc_mr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/amethysta"
                    android:justificationMode="inter_word"
                    android:paddingBottom="10dp"
                    android:text="hfhf"
                    android:textColor="@color/dirty_white" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_feedbacks_mr"
                    android:layout_width="376dp"
                    android:layout_height="69dp">

                </androidx.recyclerview.widget.RecyclerView>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/pv_comment_mr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/input_comment_bg"
                        android:ems="10"
                        android:hint="Add a comment"
                        android:inputType="textPersonName"
                        android:paddingStart="10dp"
                        android:paddingLeft="20dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/pv_comment_mr"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@android:drawable/ic_menu_send" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>